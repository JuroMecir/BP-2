<script>
    function Function(element,string,button) {
        let x = document.getElementById(string);
        if (x.style.display === "none") {
            x.style.display = "block";
        }
        let y =document.getElementById(button);
        y.style.display = "none";
        Log(element,string);

    }
</script>


<script type="text/javascript" charset="utf-8">
    function Log(element, id) {

        let rect = element.getBoundingClientRect();
        $.ajax({
            type: "POST",
            url: "/logs",
            data: {log: {subject_id: <%=return_subject_id %>, button_name: id, position_x: rect.x, position_y: rect.y}},
            success: function(

            ){

            }
        });
    }
</script>





